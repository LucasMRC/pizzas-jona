<% include partials/header %>


        <div class="container mt-5">
            <div class="orden border rounded m-auto nuevo">
                <form class="p-2" action="/" method="POST">
                    <input class="form-control" type="text" name="order[wants]" placeholder="Pedido">
                    <input class="form-control" type="text" name="order[client]" placeholder="Nombre">
                    <input class="form-control" type="text" name="order[adress]" placeholder="Dirección">
                    <input class="form-control" type="number" name="order[phone]" min="0" placeholder="Teléfono">
                    <input type="submit" class="btn btn-success btn-xs" value="Crear Pedido!">
                </form>
            </div>
            <div class="pedidos">
                <div class="row text-center text-light mt-5">
                    <% orders.forEach(order => { %>
                        <div class="orden border rounded col-sm-6 col-md-4 col-lg-3">
                            <h4><%= order.wants %></h4>
                            <h5><%= order.client %></h5>
                            <h6><%= order.adress %></h6>
                            <h6><%= order.phone %></h6>
                            <p><%= order.time %></p>
                            <form class="button-form" action="/<%= order._id %>" method="POST">
                                <button class="btn btn-success btn-xs m-1"><i class="fas fa-share-square"></i></button>
                            </form>
                            <form class="button-form" action="/<%= order._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-xs m-1"><i class="fas fa-times"></i></button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            </div>
            <a href="./historial" class="btn btn-secondary">Ir al historial!</a>
        </div>


<% include partials/footer %>